#!/usr/bin/env bash
# Scheme LLM Toolkit development environment configuration

export PROJECT_NAME="scheme-llm-toolkit"
export PROJECT_ROOT="$(pwd)"

# Guile configuration
export GUILE="guile3"
export GUILE_LOAD_PATH="${PROJECT_ROOT}/src:${GUILE_LOAD_PATH}"
export GUILE_LOAD_COMPILED_PATH="${PROJECT_ROOT}/src:${GUILE_LOAD_COMPILED_PATH}"

# Development tools
export EDITOR="emacs -nw"

# Helper functions for development
dev_env() {
    make dev-env
}

dev_tty() {
    make dev-tty
}

# Load local configuration if exists
if [ -f .envrc.local ]; then
    source .envrc.local
fi

echo "Scheme LLM Toolkit environment loaded"
echo "Project: ${PROJECT_NAME}"
echo "Root: ${PROJECT_ROOT}"
echo "Run 'dev_env' to start tmux/Emacs development environment"